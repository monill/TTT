{% extends 'layout/auth.twig' %}

{% block title %} Login {% endblock %}

{% block content %}

<div class="unix-login">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4">
                <div class="login-content card">
                    <div class="login-form">
                        <h4>Login</h4>
                        <form action="{{ url }}/login" method="post" autocomplete="off">
                            <input type="hidden" name="token" value="{{ token }}">
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input id="email" type="email" class="form-control" name="email" placeholder="E-mail" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input id="password" type="password" class="form-control" name="password" minlength="6" maxlength="16" placeholder="Password" required>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                                <label class="pull-right">
                                    <a href="{{ url }}/recover/account">Forgotten Password?</a>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Sign in</button>
                            <div class="register-link m-t-15 text-center">
                                <p>Don't have account ? <a href="{{ url }}/signup"> Sign Up Here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center">
                    Copyright &copy; {{ "now"|date("Y") }} - TTT
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
