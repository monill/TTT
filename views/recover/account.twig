{% extends 'layout/auth.twig' %}

{% block title %} Recover Password {% endblock %}

{% block content %}

    <div class="unix-login">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <div class="login-content card">
                        <div class="login-form">
                            <h4>Recover Password</h4>
                            <form action="{{ url }}/recover/account" method="post" autocomplete="off">
                                <input type="hidden" name="token" value="{{ token }}">
                                <p> Please provide the email you signed with </p>
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input id="email" type="email" class="form-control" name="email" placeholder="E-mail" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Recover</button>
                                <div class="register-link m-t-15 text-center">
                                    <p>Remember Password ? <a href="{{ url }}/login"> Login Here</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="text-center">
                        Copyright &copy; {{ "now"|date("Y") }} - TTMOD
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
