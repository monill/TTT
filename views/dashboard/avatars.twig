{% extends 'layout/main.twig' %}

{% block title %} Admin Control Panel - Avatars {% endblock %}

{% block content %}

    {% include 'dashboard/menu.twig' %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-title text-center">
                    <h4 class="text-info">Avatars</h4>
                </div>
                <div class="card-body">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Username </th>
                                <th> Avatar </th>
                                <th> Profile </th>
                                <th> Class </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <th> <a href="{{ url }}/user/id/{{ user.id }}" class="text-info"> {{ user.username }} </a> </th>
                                <td> <img src="{{ user.avatar }}" width="10%" alt="Avatar"> </td>
                                <td> {{ user.profile|capitalize }}</td>
                                <td> {{ user.class|capitalize }} </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {{ users.links|raw }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
