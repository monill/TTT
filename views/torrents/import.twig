{% extends 'layout/main.twig' %}

{% block title %} Torrents Imports {% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="card-header">
                Upload Rule
            </div>
            <div class="card">
                <div class="card-body text-center">
                    <b class="text-danger">Click Once! - Uploading a lot files may take longer.</b>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <form class="form-horizontal" enctype="multipart/form-data" action="{{ url }}/torrent/import" method="post" autocomplete="off">
                        <input type="hidden" name="token" value="{{ token }}" />

                        <div class="form-group">
                            <label for="torrentfile">File list:</label>
                            <div class="col-md-9">
                                <b>Total files:</b> {{ files|length }}<br />
                                {% for file in files %}
                                    <br /> -- {{ file }} <br />
                                {% else %}
                                    Nothing to show.<br /> Place files into import in <b>/data/import/</b> folder
                                {% endfor %}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-sm-2" for="category">Category:</label>
                            <div class="col-md-3">
                                <select name="category" id="category" class="form-control" required>
                                    <option selected disabled="disabled">Select a category</option>
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name|e }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="showuploader" class="col-lg-4 col-sm-4 custom-control"> Annonymous Upload? </label>
                            <div class="col-md-8">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="anonymo" id="yes" value="yes">
                                    <label class="form-check-label" for="yes"> Yes </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="anonymo" id="no" value="no" checked>
                                    <label class="form-check-label" for="no"> No </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-5 col-lg-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
